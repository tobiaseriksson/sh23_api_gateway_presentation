    {
    "version": 3,
    "name": "SH23 API Gateway",
    "port": 8080,
    "cache_ttl": "3600s",
    "timeout": "30s",
    "extra_config": {
        "router": {
            "return_error_msg": true
        },
        "telemetry/logging": {
            "level": "DEBUG",
            "prefix": "[KRAKEND]",
            "syslog": false,
            "stdout": true
        },
        "telemetry/metrics": {
            "collection_time": "30s",
            "listen_address": ":8090"
        },
        "telemetry/influx": {
            "address": "http://influxdb:8086",
            "ttl": "25s",
            "buffer_size": 100,
            "username": "krakend-dev",
            "password": "pas5w0rd"
        },
        "telemetry/opencensus": {
          "sample_rate": 100,
          "reporting_period": 1,
          "enabled_layers": {
            "backend": true,
            "pipe": true,
            "router": true
          },
          "exporters": {
            "jaeger": {
              "endpoint": "http://jaeger:14268/api/traces",
              "service_name": "krakend"
            }
          }
        },
        "modifier/lua-endpoint": {
            "sources": [
                "common_lua_functions.lua"
            ],
            "pre": "print('.....PRE Backend......'); print_router_context_info(ctx.load())",
            "live": true,
            "allow_open_libs": true,
            "skip_next": false
        }
    },
    "endpoints": [
        {
            "endpoint": "/sh23/api/customer-list",
            "method": "GET",
            "output_encoding": "safejson",            
            "input_headers": [
                "*"
            ],
            "backend": [
                {
                    "host": [
                        "http://aggregator_api_1:5059"
                    ],
                    "url_pattern": "/api/v1/emails",
                    "method": "GET",
                    "encoding": "safejson",
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/sh23/api/customer/{email}",
            "method": "GET",            
            "input_query_strings": [
                "*"
            ],
            "input_headers": [
                "*"
            ],
            "backend": [
                {
                    "host": [
                        "http://aggregator_api_1:5059"
                    ],                    
                    "url_pattern": "/aggregator/customer/{email}",
                    "method": "GET",
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/sh23/api/individuals/{id}",
            "method": "GET",
            "output_encoding": "json",            
            "input_headers": [
                "*"
            ],
            "backend": [
                {
                    "host": [
                        "http://individuals_api_1:5059",
                        "http://individuals_api_2:5059",
                        "http://individuals_api_3:5059"
                    ],
                    "url_pattern": "/api/v1/individuals/{id}",
                    "method": "GET",
                    "encoding": "json",
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/sh23/api/addresses/{id}",
            "method": "GET",
            "input_headers": [
                "Authorization",
                "Content-Type"
            ],
            "backend": [
                {
                    "host": [
                        "http://address_api_1:5059"
                    ],
                    "url_pattern": "/api/v1/addresses/{id}",
                    "method": "GET",
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        }  
    ]
}